{
  "name": "scrumbot",
  "display-name": "Scrumbot Sift",
  "description": "Slackbot for daily standup meetings",
  "author": "Michael Karliner",
  "version": "1.0.0",
  "icon": "assets/icon.svg",
  "subtitle": "A Slackbot for daily standup meetings.",
  "marketing": {
	  "screenshots": [
	    "assets/slack_store_screen_shot.png"
	  ],
    "links": [
      {
        "label": "Github",
        "type": "github",
        "url": "https://github.com/redsift/scrumbot"
      }
    ]
  },
  "interfaces": {
    "summary": {
      "controller": "dist/js/controller.umd-es2015.min.js"
    }
  },
  "dag": {
    "inputs": {
      "slack-bot": {
        "_config": {
          "ambientMentionDuration": 300,
          "permission": "team"
        },
        "slack": {
          "filter": {
            "conditions": [{
                "type": "message:direct_mention,direct_message,ambient,mention"
              },
              {
                "text": {
                  "regexp": {
                    "pattern": ".*",
                    "flags": "i"
                  }
                }
              }
            ],
            "operator": "AND"
          }
        }
      }
    },
    "nodes": [{
        "#": "Reset Reports",
        "implementation": {
          "javascript": "server/reset.js",
          "when": {
            "crontab": "0 8 * * 1-5"
          }
        },
        "input": {
          "bucket": "reports",
          "select": "*"
        },
        "outputs": {
          "reports": {},
          "currentSummary": {}
        }
      },
      {
        "#": "Meeting call",
        "implementation": {
          "javascript": "server/meetingcall.js",
          "when": {
            "crontab": "0 10 * * 1-5"
          }
        },
        "input": {
          "bucket": "credentials",
          "select": "slack/bot_access_token"
        }
      },
      {
        "#": "Process Messages",
        "implementation": {
          "javascript": "server/messages.js"
        },
        "input": {
          "bucket": "slack",
          "lookup": [{
              "bucket": "credentials",
              "key": "slack/bot_access_token"
            },
            {
              "bucket": "currentSummary",
              "key": "current"
            }
          ]
        },
        "outputs": {
          "reports": {}
        }
      },
      {
        "#": "Report Generator",
        "implementation": {
          "javascript": "server/report.js"
        },
        "input": {
          "bucket": "reports",
          "select": "*",
          "lookup": [{
              "bucket": "credentials",
              "key": "slack/bot_access_token"
            },
            {
              "bucket": "currentSummary",
              "key": "current"
            }
          ]
        },
        "outputs": {
          "currentSummary": {}
        }
      }
    ],
    "stores": {
      "currentSummary": {
        "key$schema": "string"
      },
      "reports": {
        "key$schema": "string",
        "ttl": 2592000
      },
      "credentials": {
        "import": "_server"
      }
    },
    "outputs": {}
  }
}
