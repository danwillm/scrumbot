{
  "name": "scrumbot",
  "display-name": "Scrumbot Sift",
  "description": "Slackbot for daily standup meetings",
  "author": "Michael Karliner",
  "version": "1.0.2",
  "icon": "assets/icon.svg",
  "subtitle": "A Slackbot for daily standup meetings.",
  "marketing": {
    "screenshots": [
      "assets/slack_store_screen_shot.png"
    ],
    "links": [{
      "label": "Github",
      "type": "github",
      "url": "https://github.com/redsift/scrumbot"
    }]
  },
  "interfaces": {
    "summary": {
      "controller": "dist/js/controller.umd-es2015.min.js"
    }
  },
  "dag": {
    "inputs": {
      "slack-bot": {
        "_config": {
          "ambientMentionDuration": 300,
          "permission": "team"
        },
        "slack": {
          "filter": {
            "conditions": [{
                "type": "message:direct_mention,direct_message,mention"
              },
              {
                "text": {
                  "regexp": {
                    "pattern": ".*",
                    "flags": "i"
                  }
                }
              }
            ],
            "operator": "AND"
          }
        }
      },
      "webhooks": {
        "settingsHook": {
          "inbound": {
            "uri": "{key}/{value}"
          }
        }
      }
    },
    "nodes": [

      {
        "#": "Installation",
        "implementation": {
          "shared": true,
          "javascript": "server/installation.js"
        },
        "input": {
          "bucket": "credentials",
          "select": "slack/bot_access_token"
        },
        "outputs": {
          "reports": {},
          "currentSummary": {},
          "settings": {},
          "settingsExport": {}
        }
      },
      {
        "#": "Process Settings",
        "implementation": {
          "shared": true,
          "javascript": "server/settings.js"
        },
        "input": {
          "bucket": "settingsHook"
        },
        "outputs": {
          "settings": {},
          "settingsExport": {}
        }
      },
      {
        "#": "Cron",
        "implementation": {
          "shared": true,
          "javascript": "server/cron.js",
          "when": {
            "crontab": "*/5 * * * 1-5",
            "run": {
              "install": false,
              "update": false
            }
          }
        },
        "input": {
          "bucket": "reports",
          "select": "*",
          "lookup": [{
            "bucket": "settings",
            "key": "settings"
          }]
        },
        "outputs": {
          "reports": {},
          "currentSummary": {}
        }
      },
      {
        "#": "Process Messages",
        "implementation": {
          "shared": true,
          "javascript": "server/messages.js"
        },
        "input": {
          "bucket": "slack",
          "lookup": [{
              "bucket": "credentials",
              "key": "slack/bot_access_token"
            },
            {
              "bucket": "currentSummary",
              "key": "current"
            },
            {
              "bucket": "throttle",
              "key": "throttle"
            }
          ]
        },
        "outputs": {
          "reports": {},
          "throttle": {}
        }
      },
      {
        "#": "Report Generator",
        "implementation": {
          "shared": true,
          "javascript": "server/report.js"
        },
        "input": {
          "bucket": "reports",
          "select": "*",
          "lookup": [{
              "bucket": "credentials",
              "key": "slack/bot_access_token"
            },
            {
              "bucket": "currentSummary",
              "key": "current"
            }
          ]
        },
        "outputs": {
          "currentSummary": {}
        }
      }
    ],
    "stores": {
      "settings": {
        "key$schema": "string"
      },
      "currentSummary": {
        "key$schema": "string"
      },
      "reports": {
        "key$schema": "string",
        "ttl": 2592000
      },
      "credentials": {
        "import": "_server"
      },
      "throttle": {
        "key$schema": "string",
        "ttl": 60
      }
    },
    "outputs": {
      "exports": {
        "settingsExport": {
          "key$schema": "string"
        }
      }
    }
  }
}
